<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@drawable/detail_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_sample_addplayer"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="60dp"
                android:scrollbarTrackVertical="@drawable/person"
                android:src="@drawable/person"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginTop="-90dp"
                android:layout_marginLeft="260dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/add_image"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato_thin"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                    <EditText
                        android:id="@+id/frag_galry_name"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textSize="25dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_thin"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Phone #:"
                        android:fontFamily="@font/lato_thin"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                    <EditText
                        android:id="@+id/frag_galry_phone"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_thin"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Role:"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato_thin"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                    <EditText
                        android:id="@+id/frag_galry_role"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textSize="25dp"
                        android:fontFamily="@font/lato_thin"
                        android:textColor="@color/white"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Address:"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:fontFamily="@font/lato_thin"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                    <EditText
                        android:id="@+id/frag_galry_address"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_thin"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Age:"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:fontFamily="@font/lato_thin"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                    <EditText
                        android:id="@+id/frag_galry_age"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_thin"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Player Name"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="65dp">

            <Button

                android:id="@+id/btn_edit_gallery_frag"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/lato_thin"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/menu_icons"
                android:text="Edit"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_remove_sample_addplayer"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/redish"
                android:fontFamily="@font/lato_thin"
                android:text="Back"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>

        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>