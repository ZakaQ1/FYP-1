<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:background="@drawable/rc_abstract"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_team_name_sent_request"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_thin"
            android:text=""/>

        <TextView
            android:id="@+id/txt_team_type_sent_request"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_thin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_reject_sample_request"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/redish"
                android:fontFamily="@font/lato_thin"
                android:text="Cancel Request"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>