<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rc_abstract">

    <LinearLayout
        android:background="@drawable/backgroundbox"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_team_sample_name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_thin"
                    android:text="Zaka Qaisr"
                    android:textSize="22dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/view_team_sample_role"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_thin"
                    android:text="Bowler"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_sample_view_team"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person"
                android:scrollbarTrackVertical="@drawable/person"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_viewteam_sample_myteams"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:fontFamily="@font/lato_thin"
                android:backgroundTint="@color/menu_icons"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_leaveteam_sample_myteams"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_thin"
                android:backgroundTint="@color/redish"
                android:layout_marginLeft="30dp"
                android:text="Drop Player"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>

        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>