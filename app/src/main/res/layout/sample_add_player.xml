<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rc_abstract">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/backgroundbox"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addplayer_sample_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/txtv_border"
                    android:fontFamily="@font/lato_thin"
                    android:gravity="center"
                    android:hint="Player Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color" />

                <TextView
                    android:id="@+id/addplayer_sample_phone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/txtv_border"
                    android:fontFamily="@font/lato_thin"
                    android:gravity="center"
                    android:hint="Player Phone #"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color" />

                <TextView
                    android:id="@+id/addplayer_sample_age"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/txtv_border"
                    android:fontFamily="@font/lato_thin"
                    android:gravity="center"
                    android:hint="Player Age"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color" />


                <TextView
                    android:id="@+id/addplayer_sample_role"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/txtv_border"
                    android:fontFamily="@font/lato_thin"
                    android:gravity="center"
                    android:hint="Player Role"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color" />

                <TextView
                    android:id="@+id/addplayer_sample_address"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/txtv_border"
                    android:fontFamily="@font/lato_thin"
                    android:gravity="center"
                    android:hint="Player Address"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_sample_addplayer"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="80dp"
                android:scrollbarTrackVertical="@drawable/person"
                android:src="@drawable/person"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit_sample_addplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/menu_icons"
                android:fontFamily="@font/lato_thin"
                android:text="Edit"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_remove_sample_addplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/redish"
                android:fontFamily="@font/lato_thin"
                android:text="Remove"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>